
@model CD.ApplicationContracts.Project.CreatProject
@{
}
<form asp-page="./Index" asp-page-handler="Create"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Name" class="control-label">نام</label>
                    <input type="text" class="form-control" asp-for="Name" onchange="makeSlug('Name', 'Slug')">
                    <span asp-validation-for="Name" class="error"></span>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label">توضیح کوتاه</label>
                        <input type="text" class="form-control" asp-for=@Model.ShortDescription>
                        <span asp-validation-for="Name" class="error"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label">موضوع پروژه</label>
                    
                            <select class="form-control" asp-for="CategoryId"
                                    asp-items='new SelectList(Model.ProjectCategories, "Id", "Name")'>
                                <option value="0">گروه محصول</option>
                            </select>
                     
                        <span asp-validation-for="Name" class="error"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label">توضیح</label>
                        <input type="text" class="form-control" asp-for=@Model.Description>
                        <span asp-validation-for="Name" class="error"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label">عکس</label>
                        <input type="text" class="form-control" asp-for=@Model.Image>
                        <span asp-validation-for="Name" class="error"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label">فایل</label>
                        <input type="text" class="form-control" asp-for=@Model.File>
                        <span asp-validation-for="Name" class="error"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-info waves-effect waves-light">ایجاد</button>
    </div>
</form>

