@page
@using CD.UseCase.Areas.Administrator.Pages.Project;
@model IndexModel
@{
}


<!DOCTYPE html>
<html>
<head>
    <title>لیست گروه پروژه ها</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f1f1f1;
        }
        /* ... کدهای قبلی ... */

        /* استایل دکمه‌ها */
        .custom-button {
            padding: 8px 12px;
            border: none;
            border-radius: 5px;
            text-decoration: none;
            font-size: 16px;
            cursor: pointer;
        }

        .delete-button {
            background-color: red;
            color: white;
        }

        .restore-button {
            background-color: green;
            color: white;
        }

        /* استایل وضعیت آیتم‌ها */
        .item-status {
            display: inline-block;
            padding: 5px 10px;
            border-radius: 5px;
            color: white;
            font-size: 14px;
            text-align: center;
            font-weight: bold;
        }

        .deleted {
            background-color: red;
        }

        .available {
            background-color: green;
        }

        /* ... کدهای قبلی ... */


        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .text-center {
            text-align: center;
        }

        h1 {
            text-align: center;
            margin-bottom: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        th, td {
            padding: 12px;
            text-align: center;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f2f2f2;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .btn-success {
            padding: 8px 12px;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 5px;
            text-decoration: none;
            display: inline-block;
        }

        .btn-success:hover {
            background-color: #45a049;
        }

        /* Additional styles for file and image display */
        a {
            text-decoration: none;
            color: #4CAF50;
        }

        img {
            max-width: 100px;
            max-height: 100px;
            display: block;
            margin: 0 auto;
        }
        /* استایل دکمه حذف با رنگ قرمز */
        .custom-delete-button {
            background-color: red;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            text-decoration: none; /* حذف زیر خط متن لینک */
            font-size: 16px;
        }

            /* استایل هنگام هاور ماوس بر روی دکمه */
            .custom-delete-button:hover {
                background-color: darkred;
                cursor: pointer;
            }

    </style>
</head>
<body>
    <div class="container">
        <h1 class="text-center">لیست گروه محصولات</h1>
        <p class="text-center">
            <a asp-page="./Creat" class="btn-success">ایجاد جدید</a>
        </p>
        <table>
            <thead>
                <tr>
                    <th>#</th>
                    <th>نام</th>
                    <th>تاریخ ایجاد</th>
                    <th>فایل</th>
                    <th>تصویر</th>
                    <th>ویرایش</th>
                    <th>عملیات</th>
                    <th>وضعیت</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model. projectViewModels)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.CreationDate</td>
                        <td>
                            @if (item.File != null)
                            {
                                <a href="@item.File" target="_blank">فایل</a>
                            }
                        </td>
                        <td>
                            @if (item.Image != null)
                            {
                                <img src="@item.Image" alt="تصویر" />
                            }
                        </td>
                        <td>
                            <a asp-page="./Edit" asp-route-id="@item.Id" class="btn-success">ویرایش</a>
                           

                        <td>
                                @if (item.IsRemoved == false)
                                {
                                <a asp-page="./Index" asp-route-id="@item.Id" asp-page-handler="Remove" class="custom-button delete-button">حذف</a>
                                }
                                else
                                {
                                <a asp-page="./Index" asp-route-id="@item.Id" asp-page-handler="Restore" class="custom-button restore-button">بازیابی</a>
                                }
                        </td>
                        <td>
                            <span class="item-status @((item.IsRemoved) ? "deleted" : "available")">
                                    @((item.IsRemoved) ? "حذف شده" : "موجود")
                            </span>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
